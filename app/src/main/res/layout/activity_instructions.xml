<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="top"
    tools:context="com.example.admin.npa.InstructionsActivity">
    <ImageView
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/logo"
        />
    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/hikcp"
        android:gravity="center"
        android:padding="10dp"
        android:layout_above="@+id/begin"
        android:id="@+id/hikc"
        />
    <Button
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:id="@+id/begin"

        android:theme="@style/AccentButton1"
        android:text="Begin Assessment"
        android:layout_height="wrap_content" />
    <ScrollView
        android:id="@+id/svv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/hikc"
        android:layout_below="@+id/logo"
        >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/instructions"
        android:padding="20dp"
        android:text="@string/instructions"


        />
    </ScrollView>

</RelativeLayout>
