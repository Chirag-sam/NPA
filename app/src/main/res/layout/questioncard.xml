<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/primary"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"

                android:theme="@style/AppTheme1">
    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                        android:layout_alignParentTop="true"
                                        android:id="@+id/cv0"
                                        android:layout_width="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:layout_height="wrap_content"
                                        android:clickable="false"
                                        android:focusable="true"
                                        card_view:cardBackgroundColor="@android:color/background_light"
                                        card_view:cardCornerRadius="4dp"
                                        card_view:cardElevation="8dp"
                                        card_view:cardUseCompatPadding="true"

                                        card_view:contentPadding="5dp">
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:text="Question 18/20"
                  android:textSize="20dp"
                  android:padding="8dp"
                  android:id="@+id/questno"
        />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                        android:id="@+id/cv"
                                        android:layout_width="match_parent"
                                        android:layout_below="@+id/cv0"
                                        android:layout_height="wrap_content"
                                        android:clickable="false"
                                        android:focusable="true"
                                        card_view:cardBackgroundColor="@android:color/background_light"
                                        card_view:cardCornerRadius="4dp"
                                        card_view:cardElevation="8dp"
                                        card_view:cardUseCompatPadding="true"

                                        card_view:contentPadding="5dp">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:padding="10dp">

            <TextView
                android:id="@+id/question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Question 1: How bad would you say the symptoms are?"
                android:textSize="20dp" />
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:id="@+id/mcqmany"
                      android:visibility="gone"

        >
            <CheckBox
                android:id="@+id/ch1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Very mild"
                android:textSize="20dp" />

            <CheckBox
                android:id="@+id/ch2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Mild"
                android:textSize="20dp" />

            <CheckBox
                android:id="@+id/ch3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Strong"
                android:textSize="20dp" />

            <CheckBox
                android:id="@+id/ch4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Extreme"
                android:textSize="20dp" />

            <CheckBox
                android:id="@+id/ch5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Unbearable"
                android:textSize="20dp" />
        </LinearLayout>

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/mcqone"
                android:visibility="gone"

            >

                <RadioButton
                    android:id="@+id/rdb1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Very mild"
                    android:textSize="20dp" />

                <RadioButton
                    android:id="@+id/rdb2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Mild"
                    android:textSize="20dp" />

                <RadioButton
                    android:id="@+id/rdb3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Strong"
                    android:textSize="20dp" />

                <RadioButton
                    android:id="@+id/rdb4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Extreme"
                    android:textSize="20dp" />

                <RadioButton
                    android:id="@+id/rdb5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Unbearable"
                    android:textSize="20dp" />
            </RadioGroup>
            <SeekBar
                android:id="@+id/seekBar"
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="5"
                android:paddingTop="20dp"
                android:progress="0"
                android:visibility="gone"

            />
            <android.support.design.widget.TextInputLayout
                android:id="@+id/edittextqntil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="16dp"
                android:visibility="gone"
            >
                <EditText
                    android:id="@+id/edittextqn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:hint="Enter Text Here"
                    android:gravity="center"
                    android:inputType="text"


                />
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                    android:orientation="horizontal"
                  android:layout_below="@+id/cv"

    >

    <Button android:layout_width="match_parent" android:layout_height="55dp"
            android:elevation="5dp"
            android:theme="@style/AccentButton2"
            android:text="back"
            android:filterTouchesWhenObscured="true"
            android:id="@+id/back"
            android:layout_weight="1"

    />
        <Button android:layout_width="match_parent" android:layout_height="55dp"
                android:elevation="5dp"
                android:theme="@style/AccentButton2"
                android:text="next"
                android:layout_weight="1"
                android:filterTouchesWhenObscured="true"
                android:id="@+id/next"
        />
    </LinearLayout>
    </RelativeLayout>