<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gradient2"


                android:theme="@style/AppTheme1">

    <RelativeLayout
        android:id="@+id/actionbarlayout"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:background="@android:color/background_light"
    >

        <TextView
            android:id="@+id/surveyname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/next"
            android:layout_toRightOf="@+id/back"

            android:gravity="center"
            android:padding="8dp"
            android:text="Survey Name"
            android:textSize="20dp"
        />
        <ImageButton android:id="@+id/back"
                     android:layout_width="wrap_content"
                     android:layout_height="60dp"
                     android:layout_alignParentLeft="true"
                     android:background="?selectableItemBackgroundBorderless"
                     android:elevation="5dp"
                     android:filterTouchesWhenObscured="true"
                     android:padding="5dp"
                     card_view:srcCompat="@drawable/ic_arrow_back_black_24dp"

        />
        <ImageButton android:id="@+id/next"
                     android:layout_width="wrap_content"
                     android:layout_height="60dp"
                     android:layout_alignParentRight="true"
                     android:background="?selectableItemBackgroundBorderless"
                     android:elevation="5dp"

                     android:filterTouchesWhenObscured="true"

                     android:padding="5dp"
                     android:text="next"
                     card_view:srcCompat="@drawable/ic_arrow_forward_black_24dp"
        />
    </RelativeLayout>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/hikc"
                android:layout_below="@+id/actionbarlayout"
                android:fillViewport="false">
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

        >
            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/cv"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:clickable="false"
                android:focusable="true"
                card_view:cardBackgroundColor="@android:color/background_light"
                card_view:cardCornerRadius="4dp"
                card_view:cardElevation="8dp"
                card_view:cardUseCompatPadding="true"

                card_view:contentPadding="5dp">
                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:orientation="vertical"
                              android:padding="5dp">
                    <TextView android:id="@+id/questno"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_gravity="center"
                              android:gravity="center"
                              android:padding="6dp"
                              android:text="18 of 20"

                              android:textSize="16dp"
                    />
                    <TextView
                        android:id="@+id/question"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="Question 1: How bad would you say the symptoms are?"
                        android:textSize="20dp"/>

                    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                  android:id="@+id/mcqmany"
                                  android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:orientation="vertical"
                                  android:theme="@style/AppTheme1"
                                  android:visibility="gone"
                                  android:padding="10dp"
                    >

                    </LinearLayout>

                    <RadioGroup
                        android:id="@+id/mcqone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:theme="@style/AppTheme1"
                        android:visibility="gone"
                        android:padding="10dp"


                    >


                    </RadioGroup>

                    <LinearLayout
                        android:id="@+id/lin1"
                        style="@style/Widget.AppCompat.SeekBar.Discrete"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingTop="20dp"

                        android:visibility="gone"/>
                    <!--<SeekBar-->
                    <!--android:id="@+id/seekBar"-->
                    <!--style="@style/Widget.AppCompat.SeekBar.Discrete"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:max="5"-->
                    <!--android:progress="0"-->

                    <!--/>-->
                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/edittextqntil"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:gravity="center"
                        android:visibility="gone"
                    >
                        <EditText
                            android:id="@+id/edittextqn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:hint="Enter Text Here"
                            android:inputType="text"
                            android:maxLines="1"


                        />
                    </android.support.design.widget.TextInputLayout>
                    <Spinner android:id="@+id/spinner"
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             android:visibility="gone"

                    />
                    <TextView android:id="@+id/date"
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:gravity="center"
                              android:padding="20dp"
                              android:text="MM/dd/yyyy"
                              android:visibility="gone"


                    />
                </LinearLayout>

            </android.support.v7.widget.CardView>
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:layout_below="@+id/cv"

            >

                <Button android:layout_width="match_parent" android:layout_height="55dp"
                        android:elevation="5dp"
                        android:theme="@style/AccentButton2"
                        android:text="back"
                        android:filterTouchesWhenObscured="true"
                        android:id="@+id/back1"
                        android:layout_weight="1"

                />
                <Button android:layout_width="match_parent" android:layout_height="55dp"
                        android:elevation="5dp"
                        android:theme="@style/AccentButton2"
                        android:text="next"
                        android:layout_weight="1"
                        android:filterTouchesWhenObscured="true"
                        android:id="@+id/next2"
                />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

    <TextView
        android:id="@+id/hikc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/hikcp"

        android:textColor="@android:color/white"
    />
</RelativeLayout>

