<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="60dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:gravity="bottom"
    tools:context="com.example.admin.npa.MainActivity"
    android:background="@color/colorWhite">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/ic_nurse"
        android:gravity="center"
        android:id="@+id/iv"
        android:layout_marginBottom="60dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:id="@+id/butt1"
        android:text="synchronize"
        android:theme="@style/AccentButton1"
        android:layout_below="@+id/iv"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:id="@+id/butt2"
        android:layout_below="@+id/butt1"
        android:text="Pending appointments"
        android:theme="@style/AccentButton1"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:id="@+id/butt3"
        android:layout_below="@+id/butt2"
        android:text="Completed appointments"
        android:theme="@style/AccentButton1"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:id="@+id/butt4"
        android:layout_below="@+id/butt3"
        android:theme="@style/AccentButton1"
        android:text="Terms and conditions"

        />



</RelativeLayout>
