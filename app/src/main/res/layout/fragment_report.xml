<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.admin.npa.ResultActivity$ReportFragment">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cv"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:clickable="false"
        android:focusable="true"
        card_view:cardBackgroundColor="@android:color/background_light"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="3dp"
        card_view:cardUseCompatPadding="true"

        card_view:contentPadding="8dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/illness"
                android:layout_alignTop="@+id/name"
                android:layout_marginRight="20dp"
                card_view:srcCompat="@drawable/ic_man_shape"
                />

            <ImageView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/personpic"
                android:layout_marginRight="10dp"

                card_view:srcCompat="@drawable/ic_person_black_24dp"
                android:layout_toRightOf="@+id/iv"/>
            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/personpic"
                android:gravity="bottom"
                android:layout_toRightOf="@+id/personpic"
                android:text="Name"

                android:textSize="20dp" />
            <ImageView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/datpic"
                android:layout_marginRight="10dp"
                android:layout_below="@+id/name"
                card_view:srcCompat="@drawable/ic_date_range_black_24dp"
                android:layout_toRightOf="@+id/iv"/>
            <TextView
                android:id="@+id/date"
                android:layout_alignBottom="@+id/datpic"
                android:gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name"
                android:layout_toRightOf="@+id/datpic"
                android:text="Date"

                android:textSize="16dp" />
            <ImageView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/diseasepic"
                android:layout_marginRight="10dp"
                android:layout_below="@+id/date"
                card_view:srcCompat="@drawable/ic_health_care"
                android:layout_toRightOf="@+id/iv"/>
            <TextView
                android:id="@+id/illness"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/date"
                android:layout_alignBottom="@+id/diseasepic"
                android:layout_toRightOf="@+id/diseasepic"
                android:gravity="bottom"
                android:text="Illness"
                android:textSize="16dp" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cv1"
        android:layout_width="wrap_content"
        android:layout_below="@+id/cv"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:focusable="true"
        card_view:cardBackgroundColor="@android:color/background_light"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="3dp"
        card_view:cardUseCompatPadding="true"
        card_view:contentPadding="8dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/riskscore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Risk Score:50/100"
                android:textSize="16dp" />
            <TextView
                android:id="@+id/providername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/riskscore"
                android:gravity="bottom"
                android:text="Provider Name:"
                android:textSize="16dp" />
            <TextView
                android:id="@+id/appointmentdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/providername"
                android:gravity="bottom"
                android:text="Appointment Date:"
                android:textSize="16dp" />
            <TextView
                android:id="@+id/reportdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/appointmentdate"
                android:gravity="bottom"
                android:text="Reporting Date:"
                android:textSize="16dp" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>



    <com.sccomponents.widgets.ScArcGauge
        android:id="@+id/gauge"
        xmlns:sc="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="30dp"
        android:layout_below="@+id/cv1"
        sc:scc_angle_start="180"
        sc:scc_angle_sweep="180"
        sc:scc_text_tokens="Low|Medium|High"
        sc:scc_stroke_colors="#8BBE28|#F7AD36|#EC4949"
        sc:scc_stroke_colors_mode="solid"
        sc:scc_text_color="@android:color/white"

        sc:scc_stroke_size="30dp"/>

    <ImageView
        android:id="@+id/indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:tint="@color/divider"
        android:layout_gravity="center_horizontal|bottom"
        android:src="@drawable/indicator"
        android:layout_alignBottom="@+id/gauge"
        android:layout_marginLeft="190dp"


     />



</RelativeLayout>
